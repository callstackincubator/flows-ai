{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "jsx": "react",                // or "react-jsx"
    "jsxFactory": "createElement", // crucial    
    "customConditions": ["bun"]
  },
  "include": ["./src"]
}
