{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "src/jsx",
    "customConditions": ["bun"],
  },
  "include": ["./src", "example/github.tsx", "global.d.ts"]
}
